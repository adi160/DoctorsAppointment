<div class="container doctors shadow-lg p-3 mb-5 bg-white rounded">
  <h1> Clinic details: </h1><hr>
  <%= form_for @clinic, url: {action: "create"} do |f| %>
    <div class="row">
      <div class="col-sm-8">
        <div class="form-group">
          <%= f.label :clinic_address %><br>
          <%= f.text_field :clinic_address, class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :city %><br>
          <%= f.text_field :city, class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :state %><br>
          <%= f.text_field :state, class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :phone_no %><br>
          <%= f.text_field :phone_no, class: "form-control" %>
        </div>
      </div> 

      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :start_time %><br>
          <%= f.text_field :start, class: "form-control" %>
        </div>
      </div> 

      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :end_time %><br>
          <%= f.text_field :end, class: "form-control" %>
        </div>
      </div> 

      <div class="form-group">
        <div class="col-sm-12">
          <br>
          <%= f.submit "Register", class: "btn btn-success" %>
          <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Reset </button>
        </div>
      </div>
    </div>
  <% end %>
</div>