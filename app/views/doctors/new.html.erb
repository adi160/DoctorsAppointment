<div class="container">
  <div class="row">
    <div class="col-sm-10"><h1>User name</h1></div>
    <div class="col-sm-2"><a href="/users" class="pull-right"><img title="profile image" class="img-circle img-responsive" src="http://www.gravatar.com/avatar/28fd20ccec6865e2d5f0e1f4446eb7bf?s=100"></a></div>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <div class="text-center">
        <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
        <h6>Upload a different photo...</h6>
        <input type="file" class="text-center center-block file-upload">
      </div>
    </div>
    <div class="col-sm-9">
      <ul class="nav nav-tabs">
          <li class="nav-items"><%= link_to 'Profile', new_doctor_path, :class => "nav-link active"%></li>
          <li class="nav-items"><%#= link_to 'Clinic', new_doctor_clinic_path(@doctor), :class => "nav-link"%></li>
          <li class="nav-items"><a class="nav-link" href="#">Menu 2</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="profile">
          <hr>
            <%= form_with model: @doctor do |f| %>
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group">
                    <%= f.label :first_name %><br>
                    <%= f.text_field :first_name, class: "form-control" %>
                  </div>
                </div>

                <div class="col-sm-6">
                  <div class="form-group">
                    <%= f.label :last_name %><br>
                    <%= f.text_field :last_name, class: "form-control" %>
                  </div>
                </div>

                <div class="col-sm-12">
                  <div class="form-group">
                    <%= f.label :address %><br>
                    <%= f.text_field :address, class: "form-control" %>
                  </div>
                </div>

                <div class="col-sm-6">
                  <div class="form-group">
                    <%= f.label :dob %><br>
                    <%= f.date_field :dob, :value => Time.now.strftime('%Y-%m-%d'), class: "form-control" %>
                  </div>
                </div>

                <div class="col-sm-6">
                  <div class="form-group">
                    <%= f.label :category %><br>
                    <%= f.number_field :category_id, class: "form-control" %>
                  </div>
                </div>
                
                <div class="col-sm-6">
                  <div class="form-group">
                    <%= f.label :city %><br>
                    <%= f.text_field :city, class: "form-control" %>
                  </div>
                </div>

                <div class="col-sm-6">
                  <div class="form-group">
                    <%= f.label :state %><br>
                    <%= f.text_field :state, class: "form-control" %>
                  </div>
                </div>
                          
                <div class="col-sm-6">
                  <div class="form-group">
                    <%= f.label :country %><br>
                    <%= f.text_field :country, class: "form-control" %>
                  </div>
                </div>

                <div class="col-sm-6">
                  <div class="form-group">
                    <%= f.label :pincode %><br>
                    <%= f.number_field :pincode, class: "form-control" %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-sm-12">
                    <br>
                    <%= f.submit "Submit", class: "btn btn-success" %>
                    <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Reset</button>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <div class="tab-pane active" id="clinic">
          <hr>
          <%= render 'clinics/new' %>
        </div>
      </div>
    </div>
  </div>
</div>
