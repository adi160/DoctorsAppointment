<h1> New Registration </h1>

<h3> General Info: </h3>
<%= form_with model: @doctor do |f| %>
  <p>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :middle_name %><br>
    <%= f.text_field :middle_name %>
  </p>
  <p>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :dob %><br>
    <%= f.date_field :dob, :value => Time.now.strftime('%Y-%m-%d') %>
  </p>
  <p>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </p>
  <p>
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </p>
  <p>
    <%= f.label :pincode %><br>
    <%= f.number_field :pincode %>
  </p>
  <p>
    <%= f.label :Specialization %><br>
    <%= f.collection_select :category_id, Category.order(:category_name),:id,:category_name %>
  </p>

  <%= f.submit "Register" %>
  <%#= link_to 'Next', new_doctor_clinic_path(@doctor)  %>

<% end %>