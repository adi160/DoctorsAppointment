<%= form_with model: @doctor do |f| %>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :first_name %><br>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :last_name %><br>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-12">
        <div class="form-group">
          <%= f.label :address %><br>
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :dob %><br>
          <%= f.date_field :dob, :value => Time.now.strftime('%Y-%m-%d'), class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :Specialization %><br>
          <%= f.collection_select :category_id, Category.order(:category_name), :id, :category_name, {include_blank: false}, { class: 'form-control'} %>
        </div>
      </div>
      
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :city %><br>
          <%= f.text_field :city, class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :state %><br>
          <%= f.text_field :state, class: "form-control" %>
        </div>
      </div>
                
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :country %><br>
          <%= f.text_field :country, class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :pincode %><br>
          <%= f.number_field :pincode, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <br>
          <%= f.submit "Submit", class: "btn btn-success" %>
          <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Reset</button>
        </div>
      </div>
    </div>
  <% end %>